                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="none"
                android:text="--Pilih Kabupaten--"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Kecamatan Panitia-->
