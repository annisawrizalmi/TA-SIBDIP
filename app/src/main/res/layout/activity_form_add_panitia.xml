            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtlay_provinsi_panitia"
            android:hint="Kabupaten"
            app:endIconMode="clear_text"
